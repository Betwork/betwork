<h1>Listing Groups</h1>

<table class="table table-striped col-md-12" id="groups">
  <thead>
  <tr>
    <th>Name</th>
    <th>Owner</th>
    <th>Group ID</th>
    <th>Current User ID</th>

    <!--    <th colspan="3"></th>-->
  </tr>
  </thead>

  <tbody>
  <% @groups.each do |group| %>
    <tr>
      <td><%= group.name_of_group %></td>
      <!--      <td><%#= group.creator_id %></td>-->
      <td><%= User.find(group.creator_id).name %></td>
      <!--      <td><%#= link_to 'Show', group %></td>-->
      <td><%= group.id %></td>
      <td><%= current_user.id %></td>
      <!--      <td><%#= link_to 'Edit', edit_group_path(group) %></td>-->
      <% if group.creator_id == current_user.id %>
        <td><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      <% if group.creator_id != current_user.id %>
        <!--          <%# add_or_remove %></td>-->
        <td><%= button_to 'Join', add_membership_path(group_id: group.id, user_id: current_user.id), method: :post %></td>
        <td><%= button_to 'Leave', remove_membership_path(group_id: group.id, user_id: current_user.id), method: :post %></td>
      <% end %>
    </tr>
  <% end %>
  <%# flash.each do |key, value| %>
  <!--    <div class="alert alert-<%#= key %>">-->
  <%#= value %>
  <!--    </div>-->
  <%# end %>
  </tbody>
</table>
