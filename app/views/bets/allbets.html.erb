<h2>Your Bets</h2>

<table class="table table-striped col-md-12" id="bets">
  <thead>
    <tr>
	    <th>Home Team</th>
	    <th>Away Team</th>
      <th>Home Money Line</th>
      <th>Away Money Line</th>
      <th>Amount</th>
      <th>Betting Against</th>
    </tr>
  </thead>
  <tbody>
    <% @user_bets.each do |odd| %>
      <tr>
        <td>
          <%= odd.home_team_name%>
        </td>
        <td>
          <%= odd.away_team_name%>
        </td>
        <td>
          <%= odd.home_money_line%>
        </td>
        <td>
          <%= odd.away_money_line%>
        </td>

        <td>
         <%= odd.amount%>
        </td>
        <td>
         <%= odd.user_two_name %>
         </td>
      </tr>
    <% end %>
  </tbody>
</table>